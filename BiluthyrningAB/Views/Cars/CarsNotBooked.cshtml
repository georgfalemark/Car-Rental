@model IEnumerable<BiluthyrningAB.Models.Car>

@{
    ViewData["Title"] = "Index";
}


<p>
    <div class="row">
        <div class="col col-4">
            <br />
            <a class="btn btn-success" asp-action="Create">Lägg till bil</a>
            <br />
            <br />
        </div>
        <div class="col col-3"></div>
        <div class="col col-5 text-center" style="border: 1px solid black">
            <br />
            <a class="btn btn-outline-info" asp-action="Index">Alla Bilar</a>
            <a class="btn btn-outline-info" asp-action="CarsBooked">Bokade Bilar</a>
            <a class="btn btn-primary" asp-action="CarsNotBooked">Tillgängliga Bilar</a>
            <br />
        </div>
    </div>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LicenseNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booked)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfDrivenKm)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LicenseNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CarType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Booked)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfDrivenKm)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CarId" class="btn btn-outline-info">Ändra</a>
                    <a asp-action="Details" asp-route-id="@item.CarId" class="btn btn-outline-info">Detaljer</a>
                    <a asp-action="Delete" asp-route-id="@item.CarId" class="btn btn-outline-info">Ta bort</a>
                </td>
            </tr>
        }
    </tbody>
</table>
